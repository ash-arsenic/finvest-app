<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/funds_details_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/funds_details_name"
        android:text="Small Cap"
        android:textSize="14sp"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:layout_toRightOf="@+id/funds_details_color"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/funds_details_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:cornerRadius="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:id="@+id/funds_details_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>