<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    tools:context=".FundDetailsActivity">

    <TextView
        android:id="@+id/fund_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sundaram Small Cap Fund"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/nunito_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fund_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fund_graph_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Below mentioned graph explained the ups and highs of the mutual fund over the last six months." />

            <ImageView
                android:id="@+id/fund_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/sample_fund_graph" />
        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/buy_funds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="50dp"
        android:text="buy now"
        android:letterSpacing="0.4"
        android:fontFamily="@font/nunito_black"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>